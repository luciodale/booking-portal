{
  "name": "booking-portal",
  "scripts": {
    "dev": "astro dev",
    "build": "tsc --noEmit && astro build",
    "preview": "astro build && wrangler dev",
    "deploy": "wrangler deploy",
    "test": "bun test src/",
    "test:watch": "bun test --watch src/",
    "db:generate": "drizzle-kit generate --name",
    "db:studio": "drizzle-kit studio",
    "db:migrate:local": "bunx wrangler d1 migrations apply booking-portal-db --local",
    "db:migrate:remote": "bunx wrangler d1 migrations apply booking-portal-db --remote",
    "db:types": "bunx wrangler types",
    "db:teardown-all:local": "bun run scripts/all-teardown-local.ts",
    "db:teardown-all:remote": "bun run scripts/r2-teardown-remote.ts && bun run scripts/d1-teardown-remote.ts",
    "db:teardown-r2:remote": "bun run scripts/r2-teardown-remote.ts",
    "db:teardown-d1:remote": "bun run scripts/d1-teardown-remote.ts",
    "db:seed-all:local": "bun run scripts/r2-seed-local.ts && bun run scripts/d1-seed-local.ts",
    "db:seed-all:remote": "bun run scripts/r2-seed-remote.ts && bun run scripts/d1-seed-remote.ts",
    "db:seed-r2:local": "bun run scripts/r2-seed-local.ts",
    "db:seed-r2:remote": "bun run scripts/r2-seed-remote.ts",
    "db:seed-d1:local": "bun run scripts/d1-seed-local.ts",
    "db:seed-d1:remote": "bun run scripts/d1-seed-remote.ts",
    "db:reset-all:local": "bun run scripts/all-teardown-local.ts && bun run scripts/r2-seed-local.ts && bun run scripts/d1-seed-local.ts",
    "db:reset-all:remote": "bun run scripts/r2-teardown-remote.ts && bun run scripts/d1-teardown-remote.ts && bun run scripts/r2-seed-remote.ts && bun run scripts/d1-seed-remote.ts",
    "test:e2e": "bunx playwright test",
    "type-check": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write ."
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/react": "^4.4.2",
    "@clerk/astro": "^2.17.2",
    "@clerk/backend": "^2.31.0",
    "@clerk/clerk-react": "^5.60.1",
    "@floating-ui/react": "^0.27.16",
    "@hookform/resolvers": "^5.2.2",
    "@nanostores/react": "^1.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-router": "^1.127.8",
    "@tanstack/router-vite-plugin": "^1.127.8",
    "astro": "^5.16.9",
    "date-fns": "^4.1.0",
    "decimal.js-light": "^2.5.1",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.3",
    "lucide": "^0.563.0",
    "lucide-react": "^0.563.0",
    "nanoid": "^5.1.6",
    "nanostores": "^1.1.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.71.1",
    "sonner": "^2.0.7",
    "stripe": "^20.3.1",
    "svix": "^1.85.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@clerk/testing": "^1.13.36",
    "@cloudflare/workers-types": "^4.20260114.0",
    "@playwright/test": "^1.58.0",
    "@tanstack/react-router-devtools": "^1.127.8",
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "drizzle-kit": "^0.31.4",
    "sharp": "^0.34.5",
    "wrangler": "^4.59.1"
  }
}
