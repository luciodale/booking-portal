---
import type { Locale } from "@/i18n/types";
import { defaultLocale } from "@/i18n/types";
import { t } from "@/i18n/t";
import { localePath } from "@/i18n/locale-path";

const locale = (Astro.currentLocale ?? defaultLocale) as Locale;

const _footerLinks = {
  company: [
    { href: localePath(locale, "/about"), label: t(locale, "footer.aboutUs") },
    { href: localePath(locale, "/careers"), label: t(locale, "footer.careers") },
    { href: localePath(locale, "/press"), label: t(locale, "footer.press") },
  ],
  support: [
    { href: localePath(locale, "/help"), label: t(locale, "footer.helpCenter") },
    { href: localePath(locale, "/contact"), label: t(locale, "footer.contact") },
    { href: localePath(locale, "/safety"), label: t(locale, "footer.safety") },
  ],
  legal: [
    { href: localePath(locale, "/privacy"), label: t(locale, "footer.privacy") },
    { href: localePath(locale, "/terms"), label: t(locale, "footer.terms") },
    { href: localePath(locale, "/cookies"), label: t(locale, "footer.cookies") },
  ],
};

const _currentYear = new Date().getFullYear();
---

<footer class="border-t border-border bg-card">
  <div class="container mx-auto px-6 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <a href={localePath(locale, "/")} class="flex items-center gap-2 mb-4">
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-primary to-accent flex items-center justify-center">
            <span class="text-primary-foreground font-bold text-sm">E</span>
          </div>
          <span class="text-xl font-semibold">
            <span class="text-foreground">Elite</span>
            <span class="text-primary">Stay</span>
          </span>
        </a>
        <p class="text-muted-foreground max-w-xs mb-6">
          {t(locale, "footer.tagline")}
        </p>
        <div class="flex items-center gap-4">
          <a href="#" class="text-muted-foreground hover:text-foreground transition-colors" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
          <a href="#" class="text-muted-foreground hover:text-foreground transition-colors" aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          </a>
          <a href="#" class="text-muted-foreground hover:text-foreground transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
        </div>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-sm font-semibold text-foreground mb-4">{t(locale, "footer.company")}</h3>
        <ul class="space-y-3">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Support -->
      <div>
        <h3 class="text-sm font-semibold text-foreground mb-4">{t(locale, "footer.support")}</h3>
        <ul class="space-y-3">
          {footerLinks.support.map(link => (
            <li>
              <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="text-sm font-semibold text-foreground mb-4">{t(locale, "footer.legal")}</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map(link => (
            <li>
              <a href={link.href} class="text-sm text-muted-foreground hover:text-foreground transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="divider-elegant" />

    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-muted-foreground">
        {t(locale, "footer.copyright", { year: String(currentYear) })}
      </p>
      <div class="flex items-center gap-6">
        <span class="text-sm text-muted-foreground">EUR â‚¬</span>
        <LanguageSwitcher locale={locale} />
      </div>
    </div>
  </div>
</footer>
