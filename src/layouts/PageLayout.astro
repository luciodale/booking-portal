---
// biome-ignore lint/correctness/noUnusedVariables: Astro Props typing
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalUrl?: string;
  showMarble?: boolean;
}

const {
  // biome-ignore lint/correctness/noUnusedVariables: used in template
  title,
  // biome-ignore lint/correctness/noUnusedVariables: used in template
  description,
  // biome-ignore lint/correctness/noUnusedVariables: used in template
  ogImage,
  // biome-ignore lint/correctness/noUnusedVariables: used in template
  canonicalUrl,
  // biome-ignore lint/correctness/noUnusedVariables: used in template
  showMarble = false,
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImage}
  canonicalUrl={canonicalUrl}
>
  <Header />

  <main class:list={["min-h-screen", { "marble-texture": showMarble }]}>
    <slot />
  </main>

  <Footer />
  <LucideIcons />
</BaseLayout>
