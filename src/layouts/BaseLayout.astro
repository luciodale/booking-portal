---
import type { Locale } from "@/i18n/types";
import { defaultLocale } from "@/i18n/types";
import { t } from "@/i18n/t";

// biome-ignore lint/correctness/noUnusedVariables: Astro Props typing
interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const locale = (Astro.currentLocale ?? defaultLocale) as Locale;

const {
  title,
  // biome-ignore lint/correctness/noUnusedVariables: used in template
  description = t(locale, "home.defaultDescription"),
  // biome-ignore lint/correctness/noUnusedVariables: used in template
  ogImage = "/og-image.jpg",
  // biome-ignore lint/correctness/noUnusedVariables: used in template
  canonicalUrl,
} = Astro.props;

// biome-ignore lint/correctness/noUnusedVariables: used in template
const siteTitle = title
  ? `${title} | EliteStay`
  : "EliteStay - Luxury Direct Booking";

// biome-ignore lint/correctness/noUnusedVariables: used in template
const currentPath = Astro.url.pathname;
// biome-ignore lint/correctness/noUnusedVariables: used in template
const origin = Astro.url.origin;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO -->
    <title>{siteTitle}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <!-- Hreflang -->
    <link rel="alternate" hreflang="en" href={`${origin}${switchLocale(currentPath, "en")}`} />
    <link rel="alternate" hreflang="it" href={`${origin}${switchLocale(currentPath, "it")}`} />
    <link rel="alternate" hreflang="x-default" href={`${origin}${switchLocale(currentPath, "en")}`} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="EliteStay" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={siteTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Theme (prevents FOUC) -->
    <script is:inline>
      (function() {
        var stored = localStorage.getItem("theme");
        var prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
        var dark = stored === "dark" || (!stored && prefersDark) || (stored === "system" && prefersDark);
        document.documentElement.classList.toggle("dark", dark);
      })();
    </script>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen bg-background text-foreground antialiased">
    <slot />
    <GalleryLightbox />
    <GlobalToaster client:load />
  </body>
</html>

<style is:global>
  @import "@/styles/global.css";
</style>
