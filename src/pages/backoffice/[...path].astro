---
import type { Locale } from "@/i18n/types";
import { defaultLocale } from "@/i18n/types";

export const prerender = false;

// biome-ignore lint/correctness/noUnusedVariables: used in template
const locale = (Astro.currentLocale ?? defaultLocale) as Locale;
---

<BaseLayout
  title={t(locale, "backoffice.title")}
  description={t(locale, "backoffice.title")}
>
  <BackofficeApp client:only="react" locale={locale}>
    <div
      slot="fallback"
      class="flex items-center justify-center min-h-[60vh] bg-linear-to-b from-background to-muted/20"
    >
      <div class="flex flex-col items-center gap-4">
        <div
          class="h-8 w-8 animate-spin rounded-full border-[1.5px] border-zinc-800/20 border-t-zinc-900"
        >
        </div>
        <p class="text-sm font-light tracking-wide text-zinc-600">{t(locale, "backoffice.loading")}</p>
      </div>
    </div>
  </BackofficeApp>
  <Footer />
</BaseLayout>
