---
import { getDb } from "@/db";
import { assets, images } from "@/db/schema";
import { kebabToDisplay } from "@/features/broker/property/domain/sync-features";
import { BookingWidget } from "@/features/public/booking/ui/BookingWidget";
import {
  fetchCityTax,
  fetchLinkedExperiences,
  fetchOwnerWhatsapp,
} from "@/features/public/browse/property-detail-queries";
import { localePath } from "@/i18n/locale-path";
import { t } from "@/i18n/t";
import type { Locale } from "@/i18n/types";
import { defaultLocale } from "@/i18n/types";
import PageLayout from "@/layouts/PageLayout.astro";
import { generateImageUrl } from "@/modules/r2/r2-helpers";
import Badge from "@/modules/ui/astro/Badge.astro";
import ExperienceCard from "@/modules/ui/astro/ExperienceCard.astro";
import ExtrasSection from "@/modules/ui/astro/ExtrasSection.astro";
import ImageGallery from "@/modules/ui/astro/ImageGallery.astro";
import PropertyMap from "@/modules/ui/astro/PropertyMap.astro";
import { formatAddress, formatLocation } from "@/utils/formatLocation";
import { asc, eq } from "drizzle-orm";

export const prerender = false;

const { id } = Astro.params;
if (!id) return Astro.redirect("/");

const locale = (Astro.currentLocale ?? defaultLocale) as Locale;

const db = getDb(Astro.locals.runtime.env.DB);

const [asset] = await db
  .select()
  .from(assets)
  .where(eq(assets.id, id))
  .limit(1);

if (!asset) return Astro.redirect("/");
if (asset.tier === "elite") return Astro.redirect(`/elite/${asset.id}`);

if (asset.status !== "published") {
  const auth = Astro.locals.auth();
  if (!auth.userId || auth.userId !== asset.userId) {
    return Astro.redirect("/");
  }
}

const assetImagesList = await db
  .select()
  .from(images)
  .where(eq(images.assetId, asset.id))
  .orderBy(asc(images.order));

const imageUrls = assetImagesList.map((img) => generateImageUrl(img.r2Key));

const property = {
  id: asset.id,
  title: asset.title,
  location: formatLocation(asset),
  address: formatAddress(asset),
  tier: asset.tier,
  description: asset.description ?? "",
  bedrooms: asset.bedrooms ?? 0,
  bathrooms: asset.bathrooms ?? 0,
  maxGuests: asset.maxOccupancy ?? 2,
  sqMeters: asset.sqMeters ?? 0,
  images: imageUrls,
  amenities: asset.amenities ?? [],
  highlights: asset.highlights ?? [],
  views: asset.views ?? [],
};

const [linkedExperiences, ownerWhatsapp, cityTax] = await Promise.all([
  fetchLinkedExperiences(db, asset.id),
  fetchOwnerWhatsapp(db, asset.userId),
  fetchCityTax(db, asset.userId, asset.city, asset.country),
]);
---

<PageLayout
  title={`${property.title} | Properties`}
  description={property.description.substring(0, 160)}
>
  <section class="pt-8 px-6">
    <div class="container mx-auto">
      <a href={localePath(locale, "/")} class="inline-flex items-center gap-2 text-muted-foreground hover:text-foreground transition-colors">
        <i data-lucide="chevron-left" class="w-5 h-5"></i>
        {t(locale, "property.backToProperties")}
      </a>
    </div>
  </section>

  <section class="py-10 px-6">
    <div class="container mx-auto">
      <div class="mb-6">
        <Badge variant={property.tier} />
      </div>
      <ImageGallery images={property.images} title={property.title} variant="standard" />
    </div>
  </section>

  <!-- Mobile booking widget (below images) -->
  <section class="lg:hidden px-6 pb-8">
    <div class="container mx-auto">
      <BookingWidget
        client:only="react"
        propertyId={property.id}
        smoobuPropertyId={asset.smoobuPropertyId ?? null}
        maxGuests={property.maxGuests}
        instantBook={asset.instantBook}
        additionalCosts={asset.additionalCosts ?? null}
        extras={asset.extras ?? null}
        cityTax={cityTax}
        locale={locale}
      />
    </div>
  </section>

  <section class="py-8 px-6">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
        <!-- Main content (2/3) -->
        <div class="lg:col-span-2 space-y-10">
          <div>
            <h1 class="text-3xl md:text-4xl font-bold text-foreground mb-3">
              {property.title}
            </h1>
            <div class="flex items-center gap-2 text-muted-foreground">
              <i data-lucide="map-pin" class="w-5 h-5"></i>
              <span>{property.location}</span>
            </div>
          </div>

          <div class="grid grid-cols-2 md:grid-cols-4 gap-8 p-8 bg-card rounded-2xl">
            <div class="text-center">
              <div class="flex items-center justify-center w-14 h-14 rounded-full bg-secondary mx-auto mb-4">
                <i data-lucide="bed-double" class="w-6 h-6 text-primary"></i>
              </div>
              <div class="text-2xl font-bold text-foreground mb-1">{property.bedrooms}</div>
              <div class="text-sm text-muted-foreground">{t(locale, "property.bedrooms")}</div>
            </div>
            <div class="text-center">
              <div class="flex items-center justify-center w-14 h-14 rounded-full bg-secondary mx-auto mb-4">
                <i data-lucide="bath" class="w-6 h-6 text-primary"></i>
              </div>
              <div class="text-2xl font-bold text-foreground mb-1">{property.bathrooms}</div>
              <div class="text-sm text-muted-foreground">{t(locale, "property.bathrooms")}</div>
            </div>
            <div class="text-center">
              <div class="flex items-center justify-center w-14 h-14 rounded-full bg-secondary mx-auto mb-4">
                <i data-lucide="users" class="w-6 h-6 text-primary"></i>
              </div>
              <div class="text-2xl font-bold text-foreground mb-1">{property.maxGuests}</div>
              <div class="text-sm text-muted-foreground">{t(locale, "property.guests")}</div>
            </div>
            <div class="text-center">
              <div class="flex items-center justify-center w-14 h-14 rounded-full bg-secondary mx-auto mb-4">
                <i data-lucide="move" class="w-6 h-6 text-primary"></i>
              </div>
              <div class="text-2xl font-bold text-foreground mb-1">{property.sqMeters}</div>
              <div class="text-sm text-muted-foreground">{t(locale, "property.sqMeters")}</div>
            </div>
            {asset.checkIn && (
              <div class="text-center">
                <div class="flex items-center justify-center w-14 h-14 rounded-full bg-secondary mx-auto mb-4">
                  <i data-lucide="clock" class="w-6 h-6 text-primary"></i>
                </div>
                <div class="text-2xl font-bold text-foreground mb-1">{asset.checkIn}</div>
                <div class="text-sm text-muted-foreground">{t(locale, "property.checkIn")}</div>
              </div>
            )}
            {asset.checkOut && (
              <div class="text-center">
                <div class="flex items-center justify-center w-14 h-14 rounded-full bg-secondary mx-auto mb-4">
                  <i data-lucide="clock" class="w-6 h-6 text-primary"></i>
                </div>
                <div class="text-2xl font-bold text-foreground mb-1">{asset.checkOut}</div>
                <div class="text-sm text-muted-foreground">{t(locale, "property.checkOut")}</div>
              </div>
            )}
          </div>

          <div>
            <h2 class="text-xl font-semibold text-foreground mb-4">{t(locale, "property.aboutThisProperty")}</h2>
            <div class="prose prose-invert max-w-none">
              {property.description.split("\n\n").map((paragraph) => (
                <p class="text-muted-foreground leading-relaxed mb-4">{paragraph}</p>
              ))}
            </div>
          </div>

          <div class="divider-elegant"></div>

          <div>
            <h2 class="text-xl font-semibold text-foreground mb-6">{t(locale, "property.amenities")}</h2>
            <div class="grid grid-cols-2 gap-4">
              {property.amenities.map((a) => (
                <div class="flex items-center gap-4 px-4 py-3.5 bg-card rounded-xl border border-border/50">
                  <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-primary/10 shrink-0">
                    <i data-lucide={a.icon} class="w-4 h-4 text-primary"></i>
                  </div>
                  <span class="text-foreground text-sm font-medium">{kebabToDisplay(a.name)}</span>
                </div>
              ))}
            </div>
          </div>

          <div class="divider-elegant"></div>

          <div>
            <h2 class="text-xl font-semibold text-foreground mb-4">{t(locale, "property.views")}</h2>
            <div class="flex flex-wrap gap-3">
              {property.views.map((v) => (
                <span class="amenity-chip">
                  <i data-lucide={v.icon} class="w-4 h-4"></i>
                  {kebabToDisplay(v.name)}
                </span>
              ))}
            </div>
          </div>

          {property.highlights.length > 0 && (
            <>
              <div class="divider-elegant"></div>
              <div>
                <h2 class="text-xl font-semibold text-foreground mb-6">{t(locale, "property.highlights")}</h2>
                <div class="grid grid-cols-2 gap-4">
                  {property.highlights.map((h) => (
                    <div class="flex items-center gap-4 px-4 py-3.5 bg-card rounded-xl border border-border/50">
                      <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-primary/10 shrink-0">
                        <i data-lucide={h.icon} class="w-4 h-4 text-primary"></i>
                      </div>
                      <span class="text-foreground text-sm font-medium">{kebabToDisplay(h.name)}</span>
                    </div>
                  ))}
                </div>
              </div>
            </>
          )}

          {(asset.extras ?? []).length > 0 && (
            <>
              <div class="divider-elegant"></div>
              <ExtrasSection extras={asset.extras!} variant="standard" />
            </>
          )}
        </div>

        <!-- Sidebar (1/3) â€” desktop only -->
        <div class="hidden lg:block lg:col-span-1">
          <div class="sticky top-header-height pt-8 space-y-8 z-20">
            <BookingWidget
              client:only="react"
              propertyId={property.id}
              smoobuPropertyId={asset.smoobuPropertyId ?? null}
              maxGuests={property.maxGuests}
              instantBook={asset.instantBook}
              additionalCosts={asset.additionalCosts ?? null}
              extras={asset.extras ?? null}
              cityTax={cityTax}
              locale={locale}
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  {linkedExperiences.length > 0 && (
    <section class="py-16 px-6 bg-card/50">
      <div class="container mx-auto">
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-foreground mb-2">{t(locale, "property.enhanceYourStay")}</h2>
          <p class="text-muted-foreground">{t(locale, "property.enhanceDescription")}</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {linkedExperiences.map((exp) => (
            <ExperienceCard
              experience={exp}
              propertyTitle={property.title}
              ownerWhatsapp={ownerWhatsapp}
              variant="standard"
              locale={locale}
            />
          ))}
        </div>
      </div>
    </section>
  )}

  <section class="py-16 px-6">
    <div class="container mx-auto">
      <h2 class="text-2xl font-bold text-foreground mb-6">{t(locale, "property.location")}</h2>
      <p class="text-muted-foreground mb-6">{property.address}</p>
      {asset.latitude && asset.longitude ? (
        <PropertyMap latitude={asset.latitude} longitude={asset.longitude} />
      ) : (
        <div class="aspect-[2/1] rounded-2xl bg-card border border-border flex items-center justify-center">
          <div class="text-center">
            <i data-lucide="map-pin" class="w-16 h-16 text-muted-foreground mx-auto mb-4"></i>
            <p class="text-sm text-muted-foreground">{t(locale, "property.mapComingSoon")}</p>
          </div>
        </div>
      )}
    </div>
  </section>
</PageLayout>
