---
import { getDb } from "@/db";
import {
  fetchCityCards,
  fetchPropertiesByCity,
} from "@/features/public/browse/queries";
import PageLayout from "@/layouts/PageLayout.astro";
import Hero from "@/modules/ui/astro/Hero.astro";
import PropertyCard from "@/modules/ui/astro/PropertyCard.astro";

export const prerender = false;

const db = getDb(Astro.locals.runtime.env.DB);
const cityParam = Astro.url.searchParams.get("city");
const currentPage = Math.max(1, Number(Astro.url.searchParams.get("page") || "1"));

const cityCards = cityParam ? [] : await fetchCityCards(db, "standard");
const { properties, totalCount, totalPages } = cityParam
  ? await fetchPropertiesByCity(db, "standard", cityParam, currentPage)
  : { properties: [], totalCount: 0, totalPages: 0 };
---

<PageLayout
  title={cityParam ? `Standard in ${cityParam}` : "Standard Collection"}
  description="Quality stays at exceptional value."
>
  <Hero
    badge="Standard"
    title="Standard Collection"
    subtitle="Quality stays at exceptional value."
    cityName={cityParam}
    height="medium"
  />

  {
    !cityParam ? (
      <section class="py-16 px-6">
        <div class="container mx-auto">
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {cityCards.map((card, index) => (
              <a
                href={`/standard?city=${encodeURIComponent(card.city)}`}
                class="group relative block rounded-2xl overflow-hidden aspect-4/3 card-hover"
                style={`animation-delay: ${0.1 + index * 0.1}s`}
              >
                <img
                  src={card.imageUrl}
                  alt={card.city}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/40 to-black/20" />
                <div class="absolute inset-0 flex flex-col items-center justify-center text-center">
                  <h3 class="text-3xl md:text-4xl font-bold text-white">{card.city}</h3>
                  <p class="text-white/70 text-lg mt-1">
                    {card.count} {card.count === 1 ? "property" : "properties"}
                  </p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    ) : (
      <section class="py-16 px-6">
        <div class="container mx-auto">
          <div class="mb-8 flex items-center gap-2 text-sm text-muted-foreground">
            <a
              href="/standard"
              class="hover:text-foreground transition-colors flex items-center gap-1"
            >
              <i data-lucide="arrow-left" class="w-4 h-4" />
              All cities
            </a>
            <span>/</span>
            <span class="text-foreground">{cityParam}</span>
            <span class="ml-auto">
              {totalCount} {totalCount === 1 ? "property" : "properties"}
            </span>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {properties.map((property, index) => (
              <div
                class="animate-slide-up opacity-0"
                style={`animation-delay: ${0.1 + index * 0.1}s`}
              >
                <PropertyCard {...property} target="_blank" />
              </div>
            ))}
          </div>

          {totalPages > 1 && (
            <nav class="mt-12 flex justify-center items-center gap-2">
              {currentPage > 1 && (
                <a
                  href={`/standard?city=${encodeURIComponent(cityParam)}&page=${currentPage - 1}`}
                  class="px-4 py-2 rounded-lg bg-card border border-border hover:bg-muted transition-colors text-sm"
                >
                  Previous
                </a>
              )}
              {Array.from({ length: totalPages }, (_, i) => i + 1).map(
                (page) => (
                  <a
                    href={`/standard?city=${encodeURIComponent(cityParam)}&page=${page}`}
                    class:list={[
                      "px-4 py-2 rounded-lg text-sm transition-colors",
                      page === currentPage
                        ? "bg-primary text-primary-foreground"
                        : "bg-card border border-border hover:bg-muted",
                    ]}
                  >
                    {page}
                  </a>
                )
              )}
              {currentPage < totalPages && (
                <a
                  href={`/standard?city=${encodeURIComponent(cityParam)}&page=${currentPage + 1}`}
                  class="px-4 py-2 rounded-lg bg-card border border-border hover:bg-muted transition-colors text-sm"
                >
                  Next
                </a>
              )}
            </nav>
          )}
        </div>
      </section>
    )
  }
</PageLayout>
