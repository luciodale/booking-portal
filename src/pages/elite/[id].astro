---
import { experienceCategoryLabels, getAssetById, getLinkedExperiences, getPriceInUnits } from '@/data/helpers';
import PageLayout from '@/layouts/PageLayout.astro';
import Badge from '@/modules/shared/ui/Badge.astro';
import Button from '@/modules/shared/ui/Button.astro';
import ImageGallery from '@/modules/shared/ui/ImageGallery.astro';

// Server-rendered dynamic route
export const prerender = false;

// Get property ID from URL
const { id } = Astro.params;

// Get property from centralized mock data
const asset = getAssetById(id || '1');

if (!asset || asset.tier !== 'elite') {
  return Astro.redirect('/elite');
}

// Prepare property object for template (JSON fields are auto-parsed by Drizzle)
const property = {
  id: asset.id,
  title: asset.title,
  location: asset.location,
  address: asset.address ?? asset.location,
  tier: asset.tier,
  tagline: asset.tagline ?? 'Exceptional Luxury Awaits',
  description: asset.description ?? '',
  price: getPriceInUnits(asset.basePrice),
  currency: asset.currency.toUpperCase(),
  bedrooms: asset.bedrooms ?? 0,
  bathrooms: asset.bathrooms ?? 0,
  maxGuests: asset.maxGuests ?? 2,
  sqMeters: asset.sqMeters ?? 0,
  images: asset.images,
  amenities: asset.amenities ?? [],
  highlights: asset.highlights ?? [],
  views: asset.views ?? [],
};

// Get linked experiences with discounts
const rawLinkedExperiences = getLinkedExperiences(asset.id);
const linkedExperiences = rawLinkedExperiences.map(exp => ({
  id: exp.id,
  title: exp.title,
  location: exp.city ?? exp.location,
  imageUrl: exp.imageUrl ?? '',
  price: getPriceInUnits(exp.basePrice),
  duration: exp.duration ?? '',
  category: exp.category ? experienceCategoryLabels[exp.category] : 'Other',
  discountPercent: exp.discountPercent,
}));
---

<PageLayout 
  title={`${property.title} | Elite Collection`}
  description={property.description.substring(0, 160)}
  showMarble
>
  <!-- Cinematic Hero -->
  <section class="relative h-[85vh] min-h-[600px] overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src={property.images[0]}
        alt={property.title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/30 via-black/20 to-background" />
      <div class="absolute inset-0 bg-gradient-to-r from-black/50 via-transparent to-transparent" />
    </div>
    
    <!-- Content -->
    <div class="relative h-full flex flex-col justify-end pb-20 px-6">
      <div class="container mx-auto">
        <!-- Back Navigation -->
        <a 
          href="/elite" 
          class="inline-flex items-center gap-2 mb-8 text-white/80 hover:text-white transition-colors backdrop-blur-sm bg-white/10 px-4 py-2 rounded-full"
        >
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
          </svg>
          Elite Collection
        </a>
        
        <!-- Elite Badge -->
        <div class="mb-6">
          <Badge variant="elite" />
        </div>
        
        <!-- Title -->
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-4 tracking-tight">
          {property.title}
        </h1>
        
        <!-- Tagline -->
        <p class="text-xl md:text-2xl text-white/80 font-light italic mb-6 max-w-2xl">
          {property.tagline}
        </p>
        
        <!-- Location -->
        <div class="flex items-center gap-3 text-white/90">
          <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="text-lg">{property.location}</span>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-float">
      <div class="w-8 h-12 rounded-full border-2 border-white/30 flex items-start justify-center p-2">
        <div class="w-1.5 h-3 bg-white/60 rounded-full animate-pulse" />
      </div>
    </div>
  </section>

  <!-- Quick Stats Bar -->
  <section class="sticky top-20 z-30 glass border-y border-border/50">
    <div class="container mx-auto px-6 py-5">
      <div class="flex flex-wrap items-center justify-between gap-6">
        <!-- Stats -->
        <div class="flex items-center gap-8">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <div>
              <div class="text-lg font-bold text-foreground">{property.bedrooms}</div>
              <div class="text-xs text-muted-foreground uppercase tracking-wide">Bedrooms</div>
            </div>
          </div>
          
          <div class="w-px h-10 bg-border" />
          
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <div>
              <div class="text-lg font-bold text-foreground">{property.maxGuests}</div>
              <div class="text-xs text-muted-foreground uppercase tracking-wide">Guests</div>
            </div>
          </div>
          
          <div class="w-px h-10 bg-border" />
          
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
              </svg>
            </div>
            <div>
              <div class="text-lg font-bold text-foreground">{property.sqMeters}</div>
              <div class="text-xs text-muted-foreground uppercase tracking-wide">m²</div>
            </div>
          </div>
        </div>
        
        <!-- Price & CTA -->
        <div class="flex items-center gap-6">
          <div class="text-right">
            <div class="text-sm text-muted-foreground">From</div>
            <div class="text-2xl font-bold text-foreground">
              {property.currency} {property.price.toLocaleString()}
              <span class="text-sm font-normal text-muted-foreground">/ night</span>
            </div>
          </div>
          <Button>Reserve Now</Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-16 px-6">
    <div class="container mx-auto">
      <ImageGallery images={property.images} title={property.title} variant="elite" />
    </div>
  </section>

  <!-- Main Content Grid -->
  <section class="py-8 px-6">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-16">
        
        <!-- Left Column - Property Details -->
        <div class="lg:col-span-2 space-y-12">
          
          <!-- Highlights -->
          <div>
            <h2 class="section-title text-2xl font-bold text-foreground mb-6">Signature Features</h2>
            <div class="grid grid-cols-2 gap-4">
              {property.highlights.map(highlight => (
                <div class="flex items-center gap-4 p-5 bg-card rounded-xl border border-border/50 group hover:border-primary/30 transition-colors">
                  <div class="flex items-center justify-center w-12 h-12 rounded-full bg-primary/10 group-hover:bg-primary/20 transition-colors">
                    <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-foreground font-medium">{highlight}</span>
                </div>
              ))}
            </div>
          </div>
          
          <div class="divider-elegant" />
          
          <!-- Description -->
          <div>
            <h2 class="section-title text-2xl font-bold text-foreground mb-6">The Experience</h2>
            <div class="prose prose-invert max-w-none space-y-6">
              {property.description.split('\n\n').map((paragraph, idx) => (
                <p class:list={[
                  "text-muted-foreground leading-relaxed",
                  idx === 0 && "text-lg text-foreground/90"
                ]}>
                  {paragraph}
                </p>
              ))}
            </div>
          </div>
          
          <div class="divider-elegant" />
          
          <!-- Amenities -->
          <div>
            <h2 class="section-title text-2xl font-bold text-foreground mb-6">Exclusive Amenities</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              {property.amenities.map(amenity => (
                <div class="flex items-center gap-4 px-4 py-3.5 bg-card rounded-xl border border-border/50 hover:border-primary/30 transition-colors">
                  <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-primary/10 shrink-0">
                    <svg class="w-4 h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </div>
                  <span class="text-foreground text-sm font-medium">{amenity}</span>
                </div>
              ))}
            </div>
          </div>
          
          <div class="divider-elegant" />
          
          <!-- Views -->
          <div>
            <h2 class="section-title text-2xl font-bold text-foreground mb-6">Panoramic Views</h2>
            <div class="flex flex-wrap gap-3">
              {property.views.map(view => (
                <span class="flex items-center gap-3 px-5 py-2.5 bg-card rounded-full border border-border/50 text-foreground text-sm font-medium">
                  <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                  {view}
                </span>
              ))}
            </div>
          </div>
          
        </div>
        
        <!-- Right Column - Booking Sidebar -->
        <div class="lg:col-span-1">
          <div class="sticky top-40">
            <div class="p-8 rounded-2xl bg-card border border-border card-elite marble-border">
              <!-- Price Header -->
              <div class="mb-8 text-center">
                <div class="text-sm text-primary uppercase tracking-widest mb-2">Starting From</div>
                <div class="flex items-baseline justify-center gap-2">
                  <span class="text-4xl font-bold text-foreground">{property.currency} {property.price.toLocaleString()}</span>
                  <span class="text-muted-foreground">/ night</span>
                </div>
                <p class="text-sm text-primary/80 mt-3">Elite pricing includes premium services</p>
              </div>
              
              <div class="h-px bg-gradient-to-r from-transparent via-border to-transparent mb-8" />
              
              <!-- Date Selection -->
              <div class="space-y-5 mb-8">
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-xs text-muted-foreground mb-2.5 font-medium uppercase tracking-wide">Check-in</label>
                    <button class="w-full px-4 py-3.5 bg-secondary rounded-xl text-left text-foreground hover:bg-card-hover transition-colors border border-border/50">
                      Select date
                    </button>
                  </div>
                  <div>
                    <label class="block text-xs text-muted-foreground mb-2.5 font-medium uppercase tracking-wide">Check-out</label>
                    <button class="w-full px-4 py-3.5 bg-secondary rounded-xl text-left text-foreground hover:bg-card-hover transition-colors border border-border/50">
                      Select date
                    </button>
                  </div>
                </div>
                <div>
                  <label class="block text-xs text-muted-foreground mb-2.5 font-medium uppercase tracking-wide">Guests</label>
                  <select class="w-full px-4 py-3.5 bg-secondary rounded-xl text-foreground border border-border/50 focus:ring-2 focus:ring-primary focus:border-primary appearance-none cursor-pointer">
                    {Array.from({ length: property.maxGuests }, (_, i) => i + 1).map(count => (
                      <option value={count}>{count} guest{count !== 1 ? 's' : ''}</option>
                    ))}
                  </select>
                </div>
              </div>
              
              <!-- Reserve Button -->
              <Button class="w-full py-4! text-base">Request to Book</Button>
              
              <p class="text-center text-sm text-muted-foreground mt-5">
                You won't be charged yet
              </p>
              
              <!-- Price Preview -->
              <div class="mt-8 pt-6 border-t border-border space-y-4">
                <div class="flex justify-between text-sm">
                  <span class="text-muted-foreground">{property.currency} {property.price.toLocaleString()} × 5 nights</span>
                  <span class="text-foreground font-medium">{property.currency} {(property.price * 5).toLocaleString()}</span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-muted-foreground">Elite concierge fee</span>
                  <span class="text-foreground font-medium">{property.currency} 350</span>
                </div>
                <div class="flex justify-between text-sm">
                  <span class="text-muted-foreground">Service fee</span>
                  <span class="text-foreground font-medium">{property.currency} {Math.round(property.price * 5 * 0.12).toLocaleString()}</span>
                </div>
                <div class="flex justify-between pt-4 border-t border-border font-semibold text-base">
                  <span class="text-foreground">Total</span>
                  <span class="text-gradient">{property.currency} {(property.price * 5 + 350 + Math.round(property.price * 5 * 0.12)).toLocaleString()}</span>
                </div>
              </div>
            </div>
            
            <!-- Contact Concierge -->
            <div class="mt-5 p-5 rounded-xl bg-card border border-border">
              <button class="w-full flex items-center justify-center gap-3 py-2 text-foreground hover:text-primary transition-colors font-medium">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                Contact Elite Concierge
              </button>
            </div>
          </div>
        </div>
        
      </div>
    </div>
  </section>
  
  <!-- Exclusive Experiences -->
  {linkedExperiences.length > 0 && (
    <section class="py-20 px-6 bg-card/50">
      <div class="container mx-auto">
        <div class="text-center mb-12">
          <div class="text-primary uppercase tracking-widest text-sm font-medium mb-3">Curated For You</div>
          <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">Exclusive Experiences</h2>
          <p class="text-muted-foreground max-w-2xl mx-auto">
            Complement your stay with handpicked experiences, available exclusively for Elite guests
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {linkedExperiences.map((exp) => (
            <div class="group rounded-2xl overflow-hidden bg-card card-hover border border-border">
              <!-- Image -->
              <div class="relative aspect-[16/10] overflow-hidden">
                <img
                  src={exp.imageUrl}
                  alt={exp.title}
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent" />
                
                <!-- Discount Badge -->
                {exp.discountPercent > 0 && (
                  <div class="absolute top-4 right-4">
                    <span class="px-3 py-1.5 rounded-full bg-primary text-primary-foreground text-xs font-bold shadow-lg">
                      {exp.discountPercent}% OFF
                    </span>
                  </div>
                )}
                
                <!-- Category & Duration -->
                <div class="absolute bottom-4 left-4 right-4 flex items-center justify-between">
                  <span class="badge-elite">{exp.category}</span>
                  <span class="px-3 py-1 rounded-full bg-white/10 backdrop-blur-sm text-white text-sm">
                    {exp.duration}
                  </span>
                </div>
              </div>
              
              <!-- Content -->
              <div class="p-6">
                <h3 class="text-xl font-semibold text-foreground mb-2 group-hover:text-primary transition-colors">
                  {exp.title}
                </h3>
                <p class="text-muted-foreground text-sm mb-5 flex items-center gap-2">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  {exp.location}
                </p>
                <div class="flex items-center justify-between">
                  <div>
                    {exp.discountPercent > 0 ? (
                      <div class="flex items-center gap-2">
                        <span class="text-2xl font-bold text-foreground">€{Math.round(exp.price * (1 - exp.discountPercent / 100)).toLocaleString()}</span>
                        <span class="text-sm text-muted-foreground line-through">€{exp.price.toLocaleString()}</span>
                      </div>
                    ) : (
                      <span class="text-2xl font-bold text-foreground">€{exp.price.toLocaleString()}</span>
                    )}
                    <span class="text-muted-foreground text-sm"> / person</span>
                  </div>
                  <Button variant="secondary">Add to Stay</Button>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-10">
          <a href="/experiences" class="text-primary hover:text-primary-hover transition-colors font-medium inline-flex items-center gap-2">
            Explore all experiences
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>
  )}
  
  <!-- Location -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">Location</h2>
        <p class="text-muted-foreground">{property.address}</p>
      </div>
      <div class="aspect-[2/1] rounded-2xl bg-card border border-border flex items-center justify-center overflow-hidden">
        <div class="text-center">
          <svg class="w-20 h-20 text-muted-foreground mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <p class="text-sm text-muted-foreground">Interactive map coming soon</p>
        </div>
      </div>
    </div>
  </section>
  
</PageLayout>
