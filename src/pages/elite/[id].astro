---
import { getDb } from "@/db";
import { assets, images } from "@/db/schema";
import {
  fetchCityTax,
  fetchLinkedExperiences,
  fetchOwnerWhatsapp,
} from "@/features/public/browse/property-detail-queries";
import type { Locale } from "@/i18n/types";
import { defaultLocale } from "@/i18n/types";
import { generateImageUrl } from "@/modules/r2/r2-helpers";
import { formatAddress, formatLocation } from "@/utils/formatLocation";
import { asc, eq } from "drizzle-orm";

export const prerender = false;

const { id } = Astro.params;
if (!id) return Astro.redirect("/elite");

// biome-ignore lint/correctness/noUnusedVariables: used in template
const locale = (Astro.currentLocale ?? defaultLocale) as Locale;

const db = getDb(Astro.locals.runtime.env.DB);

const [asset] = await db
  .select()
  .from(assets)
  .where(eq(assets.id, id))
  .limit(1);

if (!asset || asset.tier !== "elite") return Astro.redirect("/elite");

if (asset.status !== "published") {
  const auth = Astro.locals.auth();
  if (!auth.userId || auth.userId !== asset.userId) {
    return Astro.redirect("/elite");
  }
}

const assetImagesList = await db
  .select()
  .from(images)
  .where(eq(images.assetId, asset.id))
  .orderBy(asc(images.order));

const imageUrls = assetImagesList.map((img) => generateImageUrl(img.r2Key));

// biome-ignore lint/correctness/noUnusedVariables: used in template
const property = {
  id: asset.id,
  title: asset.title,
  location: formatLocation(asset),
  address: formatAddress(asset),
  tier: asset.tier,
  tagline: asset.shortDescription ?? "Exceptional Luxury Awaits",
  description: asset.description ?? "",
  bedrooms: asset.bedrooms ?? 0,
  bathrooms: asset.bathrooms ?? 0,
  maxGuests: asset.maxOccupancy ?? 2,
  sqMeters: asset.sqMeters ?? 0,
  images: imageUrls,
  amenities: asset.amenities ?? [],
  highlights: asset.highlights ?? [],
  views: asset.views ?? [],
};

// biome-ignore lint/correctness/noUnusedVariables: used in template
const [linkedExperiences, ownerWhatsapp, cityTax] = await Promise.all([
  fetchLinkedExperiences(db, asset.id),
  fetchOwnerWhatsapp(db, asset.userId),
  fetchCityTax(db, asset.userId, asset.city, asset.country),
]);
---

<PageLayout
  title={`${property.title} | Elite Collection`}
  description={property.description.substring(0, 160)}
  showMarble
>
  <section class="relative h-content-fit overflow-hidden">
    <div class="absolute inset-0">
      <img
        src={property.images[0]}
        alt={property.title}
        class="w-full h-full object-cover"
      />
      <div
        class="absolute inset-0 bg-linear-to-b from-black/30 via-black/20 to-background"
      >
      </div>
      <div
        class="absolute inset-0 bg-linear-to-b from-black/50 via-transparent to-transparent"
      >
      </div>
    </div>
    <div class="relative h-full flex flex-col justify-end pb-20 px-6">
      <div class="container mx-auto">
        <a
          href={localePath(locale, "/elite")}
          class="inline-flex items-center gap-2 mb-8 text-white/80 hover:text-white transition-colors backdrop-blur-sm bg-white/10 px-4 py-2 rounded-full"
        >
          <i data-lucide="chevron-left" class="w-5 h-5"></i>
          {t(locale, "elite.eliteCollection")}
        </a>
        <div class="mb-6">
          <Badge variant="elite" />
        </div>
        <h1
          class="text-5xl md:text-7xl font-bold text-white mb-4 tracking-tight"
        >
          {property.title}
        </h1>
        <p
          class="text-xl md:text-2xl text-white/80 font-light italic mb-6 max-w-2xl"
        >
          {property.tagline}
        </p>
        <div class="flex items-center gap-3 text-white/90">
          <i data-lucide="map-pin" class="w-6 h-6 text-primary"></i>
          <span class="text-lg">{property.location}</span>
        </div>
      </div>
    </div>
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-float">
      <div
        class="w-8 h-12 rounded-full border-2 border-white/30 flex items-start justify-center p-2"
      >
        <div class="w-1.5 h-3 bg-white/60 rounded-full animate-pulse"></div>
      </div>
    </div>
  </section>

  <section
    class="md:sticky md:top-header-height z-30 glass border-y border-border/50 py-4"
  >
    <div class="container mx-auto px-6">
      <div
        class="grid grid-cols-2 gap-4 md:flex md:flex-wrap md:items-center md:justify-center md:gap-8"
      >
        <div class="flex items-center gap-3">
          <div
            class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center"
          >
            <i data-lucide="bed-double" class="w-5 h-5 text-primary"></i>
          </div>
          <div>
            <div class="text-lg font-bold text-foreground">
              {property.bedrooms}
            </div>
            <div class="text-xs text-muted-foreground uppercase tracking-wide">
              {t(locale, "property.bedrooms")}
            </div>
          </div>
        </div>
        <div class="w-px h-10 bg-border hidden md:block"></div>
        <div class="flex items-center gap-3">
          <div
            class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center"
          >
            <i data-lucide="users" class="w-5 h-5 text-primary"></i>
          </div>
          <div>
            <div class="text-lg font-bold text-foreground">
              {property.maxGuests}
            </div>
            <div class="text-xs text-muted-foreground uppercase tracking-wide">
              {t(locale, "property.guests")}
            </div>
          </div>
        </div>
        <div class="w-px h-10 bg-border hidden md:block"></div>
        <div class="flex items-center gap-3">
          <div
            class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center"
          >
            <i data-lucide="move" class="w-5 h-5 text-primary"></i>
          </div>
          <div>
            <div class="text-lg font-bold text-foreground">
              {property.sqMeters}
            </div>
            <div class="text-xs text-muted-foreground uppercase tracking-wide">
              {t(locale, "property.sqMeters")}
            </div>
          </div>
        </div>
        {
          asset.checkIn && (
            <>
              <div class="w-px h-10 bg-border hidden md:block" />
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
                  <i data-lucide="clock" class="w-5 h-5 text-primary" />
                </div>
                <div>
                  <div class="text-lg font-bold text-foreground">
                    {asset.checkIn}
                  </div>
                  <div class="text-xs text-muted-foreground uppercase tracking-wide">
                    {t(locale, "property.checkIn")}
                  </div>
                </div>
              </div>
            </>
          )
        }
        {
          asset.checkOut && (
            <>
              <div class="w-px h-10 bg-border hidden md:block" />
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
                  <i data-lucide="clock" class="w-5 h-5 text-primary" />
                </div>
                <div>
                  <div class="text-lg font-bold text-foreground">
                    {asset.checkOut}
                  </div>
                  <div class="text-xs text-muted-foreground uppercase tracking-wide">
                    {t(locale, "property.checkOut")}
                  </div>
                </div>
              </div>
            </>
          )
        }
      </div>
    </div>
  </section>

  <section class="py-16 px-6">
    <div class="container mx-auto">
      <ImageGallery
        images={property.images}
        title={property.title}
        variant="elite"
      />
    </div>
  </section>

  <!-- Mobile booking widget (below images) -->
  <section class="lg:hidden px-6 pb-8">
    <div class="container mx-auto">
      <BookingWidget
        client:only="react"
        propertyId={property.id}
        smoobuPropertyId={asset.smoobuPropertyId ?? null}
        maxGuests={property.maxGuests}
        instantBook={asset.instantBook}
        additionalCosts={asset.additionalCosts ?? null}
        extras={asset.extras ?? null}
        cityTax={cityTax}
        locale={locale}
      />
    </div>
  </section>

  <section class="py-8 px-6">
    <div class="container mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">
        <!-- Main content (2/3) -->
        <div class="lg:col-span-2 space-y-12">
          <div>
            <h2 class="section-title text-2xl font-bold text-foreground mb-6">
              {t(locale, "property.theExperience")}
            </h2>
            <div class="prose prose-invert max-w-none space-y-6">
              {
                property.description
                  .split("\n\n")
                  .map((paragraph, idx) => (
                    <p
                      class:list={[
                        "text-muted-foreground leading-relaxed",
                        idx === 0 && "text-lg text-foreground/90",
                      ]}
                    >
                      {paragraph}
                    </p>
                  ))
              }
            </div>
          </div>
          <div class="divider-elegant"></div>
          <div>
            <h2 class="section-title text-2xl font-bold text-foreground mb-6">
              {t(locale, "property.exclusiveAmenities")}
            </h2>
            <div class="grid grid-cols-2 gap-4">
              {
                property.amenities.map((a) => (
                  <div class="flex items-center gap-4 px-4 py-3.5 bg-card rounded-xl border border-border/50 hover:border-primary/30 transition-colors">
                    <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-primary/10 shrink-0">
                      <i
                        data-lucide={a.icon}
                        class="w-4 h-4 text-primary"
                      />
                    </div>
                    <span class="text-foreground text-sm font-medium">
                      {kebabToDisplay(a.name)}
                    </span>
                  </div>
                ))
              }
            </div>
          </div>
          <div class="divider-elegant"></div>
          <div>
            <h2 class="section-title text-2xl font-bold text-foreground mb-6">
              {t(locale, "property.panoramicViews")}
            </h2>
            <div class="flex flex-wrap gap-3">
              {
                property.views.map((v) => (
                  <span class="flex items-center gap-3 px-5 py-2.5 bg-card rounded-full border border-border/50 text-foreground text-sm font-medium">
                    <i data-lucide={v.icon} class="w-5 h-5 text-primary" />
                    {kebabToDisplay(v.name)}
                  </span>
                ))
              }
            </div>
          </div>

          {
            property.highlights.length > 0 && (
              <>
                <div class="divider-elegant" />
                <div>
                  <h2 class="section-title text-2xl font-bold text-foreground mb-6">
                    {t(locale, "property.signatureFeatures")}
                  </h2>
                  <div class="grid grid-cols-2 gap-4">
                    {property.highlights.map((h) => (
                      <div class="flex items-center gap-4 px-4 py-3.5 bg-card rounded-xl border border-border/50 hover:border-primary/30 transition-colors">
                        <div class="flex items-center justify-center w-8 h-8 rounded-lg bg-primary/10 shrink-0">
                          <i data-lucide={h.icon} class="w-4 h-4 text-primary" />
                        </div>
                        <span class="text-foreground text-sm font-medium">
                          {kebabToDisplay(h.name)}
                        </span>
                      </div>
                    ))}
                  </div>
                </div>
              </>
            )
          }

          {
            (asset.extras ?? []).length > 0 && (
              <>
                <div class="divider-elegant" />
                <ExtrasSection extras={asset.extras!} variant="elite" />
              </>
            )
          }
        </div>

        <!-- Sidebar (1/3) â€” desktop only -->
        <div class="hidden lg:block lg:col-span-1">
          <div class="sticky top-sticky-offset space-y-8 z-20">
            <BookingWidget
              client:only="react"
              propertyId={property.id}
              smoobuPropertyId={asset.smoobuPropertyId ?? null}
              maxGuests={property.maxGuests}
              instantBook={asset.instantBook}
              additionalCosts={asset.additionalCosts ?? null}
              extras={asset.extras ?? null}
              cityTax={cityTax}
              locale={locale}
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  {
    linkedExperiences.length > 0 && (
      <section class="py-20 px-6 bg-card/50">
        <div class="container mx-auto">
          <div class="text-center mb-12">
            <div class="text-primary uppercase tracking-widest text-sm font-medium mb-3">
              {t(locale, "property.curatedForYou")}
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
              {t(locale, "property.exclusiveExperiences")}
            </h2>
            <p class="text-muted-foreground max-w-2xl mx-auto">
              {t(locale, "property.exclusiveExperiencesDesc")}
            </p>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            {linkedExperiences.map((exp) => (
              <ExperienceCard
                experience={exp}
                propertyTitle={property.title}
                ownerWhatsapp={ownerWhatsapp}
                variant="elite"
                locale={locale}
              />
            ))}
          </div>
        </div>
      </section>
    )
  }

  <section class="py-20 px-6">
    <div class="container mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4">
          {t(locale, "property.location")}
        </h2>
        <p class="text-muted-foreground">{property.address}</p>
      </div>
      {
        asset.latitude && asset.longitude ? (
          <PropertyMap latitude={asset.latitude} longitude={asset.longitude} />
        ) : (
          <div class="aspect-2/1 rounded-2xl bg-card border border-border flex items-center justify-center overflow-hidden">
            <div class="text-center">
              <i
                data-lucide="map-pin"
                class="w-20 h-20 text-muted-foreground mx-auto mb-4"
              />
              <p class="text-sm text-muted-foreground">
                {t(locale, "property.mapComingSoon")}
              </p>
            </div>
          </div>
        )
      }
    </div>
  </section>
</PageLayout>
