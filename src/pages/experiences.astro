---
import { getDb } from "@/db";
import {
  fetchExperienceCityCards,
  fetchExperiencesByCity,
} from "@/features/public/browse/experience-queries";
import PageLayout from "@/layouts/PageLayout.astro";
import Button from "@/modules/ui/astro/Button.astro";
import Heading from "@/modules/ui/astro/Heading.astro";
import Hero from "@/modules/ui/astro/Hero.astro";

export const prerender = false;

const db = getDb(Astro.locals.runtime.env.DB);
const cityParam = Astro.url.searchParams.get("city");
const currentPage = Math.max(1, Number(Astro.url.searchParams.get("page") || "1"));

const cityCards = cityParam ? [] : await fetchExperienceCityCards(db);
const { experiences, totalCount, totalPages } = cityParam
  ? await fetchExperiencesByCity(db, cityParam, currentPage)
  : { experiences: [], totalCount: 0, totalPages: 0 };
---

<PageLayout
  title={cityParam ? `Experiences in ${cityParam}` : "Experiences"}
  description="Curated luxury experiences to complement your stay."
  showMarble
>
  <Hero
    badge="Exclusive Access"
    title="Unforgettable Experiences"
    titleGradient="Unforgettable"
    subtitle="Curated luxury experiences crafted by local experts. From private yacht tours to Michelin dining, elevate your journey."
    cityName={cityParam}
    height="medium"
  />

  {
    !cityParam ? (
      <section class="py-16 px-6">
        <div class="container mx-auto">
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {cityCards.map((card, index) => (
              <a
                href={`/experiences?city=${encodeURIComponent(card.city)}`}
                class="group relative block rounded-2xl overflow-hidden aspect-4/3 card-hover"
                style={`animation-delay: ${0.1 + index * 0.1}s`}
              >
                <img
                  src={card.imageUrl}
                  alt={card.city}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent" />
                <div class="absolute bottom-6 left-6">
                  <h3 class="text-2xl font-bold text-white">{card.city}</h3>
                  <p class="text-white/70 text-sm mt-1">
                    {card.count} {card.count === 1 ? "experience" : "experiences"}
                  </p>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    ) : (
      <section class="py-16 px-6">
        <div class="container mx-auto">
          <div class="mb-8 flex items-center gap-2 text-sm text-muted-foreground">
            <a
              href="/experiences"
              class="hover:text-foreground transition-colors flex items-center gap-1"
            >
              <i data-lucide="arrow-left" class="w-4 h-4" />
              All cities
            </a>
            <span>/</span>
            <span class="text-foreground">{cityParam}</span>
            <span class="ml-auto">
              {totalCount} {totalCount === 1 ? "experience" : "experiences"}
            </span>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {experiences.map((exp, index) => (
              <a
                href={`/experiences/${exp.id}`}
                target="_blank"
                class="group block rounded-2xl overflow-hidden bg-card card-hover animate-slide-up opacity-0"
                style={`animation-delay: ${0.1 + index * 0.1}s`}
              >
                <div class="relative aspect-[4/3] overflow-hidden">
                  <img
                    src={exp.imageUrl}
                    alt={exp.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent" />
                  <div class="absolute top-4 left-4">
                    <span class="badge-elite">{exp.category}</span>
                  </div>
                  <div class="absolute bottom-4 right-4">
                    <span class="px-3 py-1 rounded-full bg-white/10 backdrop-blur-sm text-white text-sm">
                      {exp.duration}
                    </span>
                  </div>
                </div>
                <div class="p-5">
                  <h3 class="text-lg font-semibold text-foreground mb-1 group-hover:text-primary transition-colors">
                    {exp.title}
                  </h3>
                  <p class="text-muted-foreground text-sm flex items-center gap-1">
                    <i data-lucide="map-pin" class="w-4 h-4" />
                    {exp.location}
                  </p>
                </div>
              </a>
            ))}
          </div>

          {totalPages > 1 && (
            <nav class="mt-12 flex justify-center items-center gap-2">
              {currentPage > 1 && (
                <a
                  href={`/experiences?city=${encodeURIComponent(cityParam)}&page=${currentPage - 1}`}
                  class="px-4 py-2 rounded-lg bg-card border border-border hover:bg-muted transition-colors text-sm"
                >
                  Previous
                </a>
              )}
              {Array.from({ length: totalPages }, (_, i) => i + 1).map(
                (page) => (
                  <a
                    href={`/experiences?city=${encodeURIComponent(cityParam)}&page=${page}`}
                    class:list={[
                      "px-4 py-2 rounded-lg text-sm transition-colors",
                      page === currentPage
                        ? "bg-primary text-primary-foreground"
                        : "bg-card border border-border hover:bg-muted",
                    ]}
                  >
                    {page}
                  </a>
                )
              )}
              {currentPage < totalPages && (
                <a
                  href={`/experiences?city=${encodeURIComponent(cityParam)}&page=${currentPage + 1}`}
                  class="px-4 py-2 rounded-lg bg-card border border-border hover:bg-muted transition-colors text-sm"
                >
                  Next
                </a>
              )}
            </nav>
          )}
        </div>
      </section>
    )
  }

  <section class="py-20 px-6 bg-card text-center">
    <div class="container mx-auto max-w-2xl">
      <Heading level={2} class="mb-4">
        Have a unique experience to offer?
      </Heading>
      <p class="text-muted-foreground mb-8">
        Partner with EliteStay to reach discerning travelers looking for extraordinary moments.
      </p>
      <Button href="/partner">Become a Partner</Button>
    </div>
  </section>
</PageLayout>
