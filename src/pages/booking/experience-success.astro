---
import { getDb } from "@/db";
import { experienceBookings, experiences } from "@/db/schema";
import type { Locale } from "@/i18n/types";
import { defaultLocale } from "@/i18n/types";
import { t } from "@/i18n/t";
import { localePath } from "@/i18n/locale-path";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/modules/ui/astro/Header.astro";
import { eq } from "drizzle-orm";

export const prerender = false;

const locale = (Astro.currentLocale ?? defaultLocale) as Locale;

const sessionId = Astro.url.searchParams.get("session_id");

let booking = null;
let experienceTitle = "";

if (sessionId) {
  const D1Database = Astro.locals.runtime?.env?.DB;
  if (D1Database) {
    const db = getDb(D1Database);
    const [found] = await db
      .select()
      .from(experienceBookings)
      .where(eq(experienceBookings.stripeSessionId, sessionId))
      .limit(1);

    if (found) {
      booking = found;
      const [exp] = await db
        .select({ title: experiences.title })
        .from(experiences)
        .where(eq(experiences.id, found.experienceId))
        .limit(1);
      experienceTitle = exp?.title ?? "Your Experience";
    }
  }
}
---

<BaseLayout title={t(locale, "bookings.bookingConfirmed")}>
  <Header />
  <main class="min-h-content-fit flex items-center justify-center px-6 py-16">
    <div class="w-full max-w-md">
      {booking ? (
        <div class="p-8 rounded-2xl bg-card border border-border text-center space-y-6">
          <div class="w-16 h-16 mx-auto rounded-full bg-green-500/10 flex items-center justify-center">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-green-400">
              <path d="M20 6 9 17l-5-5" />
            </svg>
          </div>

          <div>
            <h1 class="text-2xl font-bold text-foreground mb-2">{t(locale, "bookings.bookingConfirmed")}</h1>
            <p class="text-muted-foreground">{t(locale, "bookings.experienceBooked")}</p>
          </div>

          <div class="space-y-3 text-left p-4 rounded-xl bg-background border border-border">
            <div class="flex justify-between text-sm">
              <span class="text-muted-foreground">{t(locale, "bookings.experience")}</span>
              <span class="text-foreground font-medium">{experienceTitle}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-muted-foreground">{t(locale, "bookings.date")}</span>
              <span class="text-foreground font-medium">{booking.bookingDate}</span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-muted-foreground">{t(locale, "bookings.participants")}</span>
              <span class="text-foreground font-medium">{booking.participants}</span>
            </div>
            <div class="border-t border-border my-2" />
            <div class="flex justify-between text-sm">
              <span class="text-muted-foreground">{t(locale, "bookings.total")}</span>
              <span class="text-foreground font-bold">
                {(booking.totalPrice / 100).toFixed(2)} {booking.currency.toUpperCase()}
              </span>
            </div>
          </div>

          <div class="flex flex-col gap-3">
            <a
              href={localePath(locale, "/experiences")}
              class="w-full py-3 rounded-xl bg-primary text-primary-foreground text-sm font-semibold hover:bg-primary/90 transition-colors text-center"
            >
              {t(locale, "bookings.browseMoreExperiences")}
            </a>
            <a
              href={localePath(locale, "/")}
              class="text-sm text-muted-foreground hover:text-foreground transition-colors"
            >
              {t(locale, "common.backToHome")}
            </a>
          </div>
        </div>
      ) : (
        <div class="p-8 rounded-2xl bg-card border border-border text-center space-y-4">
          <h1 class="text-xl font-bold text-foreground">{t(locale, "bookings.bookingNotFound")}</h1>
          <p class="text-muted-foreground text-sm">
            {t(locale, "bookings.bookingNotFoundDesc")}
          </p>
          <a
            href={localePath(locale, "/")}
            class="inline-block py-2 px-6 rounded-xl bg-primary text-primary-foreground text-sm font-semibold hover:bg-primary/90 transition-colors"
          >
            {t(locale, "bookings.goHome")}
          </a>
        </div>
      )}
    </div>
  </main>
</BaseLayout>
