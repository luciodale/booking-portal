---
import type { Locale } from "@/i18n/types";
import { defaultLocale } from "@/i18n/types";
import { t } from "@/i18n/t";
import { localePath } from "@/i18n/locale-path";
import PageLayout from "@/layouts/PageLayout.astro";
import Button from "@/modules/ui/astro/Button.astro";
import Heading from "@/modules/ui/astro/Heading.astro";
import Hero from "@/modules/ui/astro/Hero.astro";

const locale = (Astro.currentLocale ?? defaultLocale) as Locale;

const stats = [
  { value: t(locale, "about.stat1Value"), label: t(locale, "about.stat1Label") },
  { value: t(locale, "about.stat2Value"), label: t(locale, "about.stat2Label") },
  { value: t(locale, "about.stat3Value"), label: t(locale, "about.stat3Label") },
  { value: t(locale, "about.stat4Value"), label: t(locale, "about.stat4Label") },
];

const values = [
  {
    title: t(locale, "about.value1Title"),
    description: t(locale, "about.value1Description"),
    icon: "users-2",
  },
  {
    title: t(locale, "about.value2Title"),
    description: t(locale, "about.value2Description"),
    icon: "badge-check",
  },
  {
    title: t(locale, "about.value3Title"),
    description: t(locale, "about.value3Description"),
    icon: "heart",
  },
];

const team = [
  {
    name: "Alessandro Romano",
    role: t(locale, "about.teamRole1"),
    imageUrl:
      "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&q=80",
  },
  {
    name: "Sofia Laurent",
    role: t(locale, "about.teamRole2"),
    imageUrl:
      "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=400&q=80",
  },
  {
    name: "Marcus Chen",
    role: t(locale, "about.teamRole3"),
    imageUrl:
      "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=400&q=80",
  },
];
---

<PageLayout
  title={t(locale, "about.pageTitle")}
  description={t(locale, "about.description")}
  showMarble
>
  <!-- Hero -->
  <Hero
    badge={t(locale, "about.badge")}
    title={t(locale, "about.title")}
    titleGradient={t(locale, "about.titleGradient")}
    subtitle={t(locale, "about.subtitle")}
    height="medium"
  />

  <!-- Stats -->
  <section class="py-16 px-6 border-b border-border">
    <div class="container mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {
          stats.map((stat) => (
            <div class="text-center">
              <div class="text-4xl md:text-5xl font-bold text-gradient mb-2">
                {stat.value}
              </div>
              <div class="text-muted-foreground">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Our Mission -->
  <section class="py-20 px-6">
    <div class="container mx-auto max-w-4xl">
      <Heading level={2} class="text-center mb-8">
        {t(locale, "about.missionHeading", { gradient: "" }).trim()} <span class="text-gradient">{t(locale, "about.missionGradient")}</span>
      </Heading>
      <div
        class="text-lg text-muted-foreground leading-relaxed space-y-6 text-center"
      >
        <p>
          {t(locale, "about.missionParagraph1")}
        </p>
        <p>
          {t(locale, "about.missionParagraph2")}
        </p>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-20 px-6 bg-card">
    <div class="container mx-auto">
      <Heading level={2} class="text-center mb-16">
        {t(locale, "about.valuesHeading")}
      </Heading>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          values.map((value) => (
            <div class="text-center p-8">
              <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-primary/10 flex items-center justify-center">
                <i data-lucide={value.icon} class="w-8 h-8 text-primary"></i>
              </div>
              <h3 class="text-xl font-semibold mb-3">{value.title}</h3>
              <p class="text-muted-foreground">{value.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <Heading level={2} class="text-center mb-4"> {t(locale, "about.teamHeading")} </Heading>
      <p class="text-muted-foreground text-center mb-16 max-w-2xl mx-auto">
        {t(locale, "about.teamDescription")}
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        {
          team.map((member) => (
            <div class="text-center group">
              <div class="relative w-48 h-48 mx-auto mb-6 rounded-2xl overflow-hidden">
                <img
                  src={member.imageUrl}
                  alt={member.name}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-linear-to-t from-primary/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
              </div>
              <h3 class="text-lg font-semibold mb-1">{member.name}</h3>
              <p class="text-muted-foreground text-sm">{member.role}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 px-6 bg-card">
    <div class="container mx-auto text-center max-w-2xl">
      <Heading level={2} class="mb-4">
        {t(locale, "about.ctaHeading", { gradient: "" }).trim()} <span class="text-gradient">{t(locale, "about.ctaGradient")}</span>
      </Heading>
      <p class="text-muted-foreground mb-8">
        {t(locale, "about.ctaDescription")}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href={localePath(locale, "/elite")}>{t(locale, "about.exploreProperties")}</Button>
        <Button variant="secondary" href={localePath(locale, "/host")}>{t(locale, "about.listYourProperty")}</Button>
      </div>
    </div>
  </section>
</PageLayout>
