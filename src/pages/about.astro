---
import PageLayout from "@/layouts/PageLayout.astro";
import Button from "@/modules/ui/astro/Button.astro";
import Heading from "@/modules/ui/astro/Heading.astro";
import Hero from "@/modules/ui/astro/Hero.astro";

const stats = [
  { value: "500+", label: "Premium Properties" },
  { value: "45", label: "Countries" },
  { value: "98%", label: "Guest Satisfaction" },
  { value: "€50M+", label: "Bookings Managed" },
];

const values = [
  {
    title: "Direct Relationships",
    description:
      "We connect you directly with property owners and managers, eliminating unnecessary intermediaries and fees.",
    icon: "users-2",
  },
  {
    title: "Curated Excellence",
    description:
      "Every property in our Elite collection is personally vetted to meet our exacting standards for luxury and service.",
    icon: "badge-check",
  },
  {
    title: "Personalized Service",
    description:
      "Our concierge team is available around the clock to ensure every aspect of your stay exceeds expectations.",
    icon: "heart",
  },
];

const team = [
  {
    name: "Alessandro Romano",
    role: "Founder & CEO",
    imageUrl:
      "https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&q=80",
  },
  {
    name: "Sofia Laurent",
    role: "Head of Curation",
    imageUrl:
      "https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=400&q=80",
  },
  {
    name: "Marcus Chen",
    role: "Chief Technology Officer",
    imageUrl:
      "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=400&q=80",
  },
];
---

<PageLayout
  title="About"
  description="Learn about EliteStay's mission to revolutionize luxury travel."
  showMarble
>
  <!-- Hero -->
  <Hero
    badge="Our Story"
    title="Redefining Luxury Travel"
    titleGradient="Luxury"
    subtitle="We believe extraordinary stays should come with direct relationships, transparent pricing, and uncompromising service."
    height="medium"
  />

  <!-- Stats -->
  <section class="py-16 px-6 border-b border-border">
    <div class="container mx-auto">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {
          stats.map((stat) => (
            <div class="text-center">
              <div class="text-4xl md:text-5xl font-bold text-gradient mb-2">
                {stat.value}
              </div>
              <div class="text-muted-foreground">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Our Mission -->
  <section class="py-20 px-6">
    <div class="container mx-auto max-w-4xl">
      <Heading level={2} class="text-center mb-8">
        Our <span class="text-gradient">Mission</span>
      </Heading>
      <div
        class="text-lg text-muted-foreground leading-relaxed space-y-6 text-center"
      >
        <p>
          EliteStay was born from a simple frustration: why do luxury travelers
          pay premium fees to intermediaries who add little value? We set out to
          build something different—a platform that connects discerning guests
          directly with exceptional property managers.
        </p>
        <p>
          Every property in our collection has been personally inspected. Every
          host has been vetted for their commitment to excellence. The result is
          a curated portfolio of extraordinary places to stay, from cliff-side
          Mediterranean villas to alpine chalets.
        </p>
      </div>
    </div>
  </section>

  <!-- Values -->
  <section class="py-20 px-6 bg-card">
    <div class="container mx-auto">
      <Heading level={2} class="text-center mb-16">
        What Sets Us Apart
      </Heading>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          values.map((value) => (
            <div class="text-center p-8">
              <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-primary/10 flex items-center justify-center">
                <i data-lucide={value.icon} class="w-8 h-8 text-primary"></i>
              </div>
              <h3 class="text-xl font-semibold mb-3">{value.title}</h3>
              <p class="text-muted-foreground">{value.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="py-20 px-6">
    <div class="container mx-auto">
      <Heading level={2} class="text-center mb-4"> Leadership Team </Heading>
      <p class="text-muted-foreground text-center mb-16 max-w-2xl mx-auto">
        A team of travel enthusiasts, hospitality experts, and technology
        innovators united by a passion for extraordinary experiences.
      </p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto">
        {
          team.map((member) => (
            <div class="text-center group">
              <div class="relative w-48 h-48 mx-auto mb-6 rounded-2xl overflow-hidden">
                <img
                  src={member.imageUrl}
                  alt={member.name}
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-linear-to-t from-primary/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
              </div>
              <h3 class="text-lg font-semibold mb-1">{member.name}</h3>
              <p class="text-muted-foreground text-sm">{member.role}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 px-6 bg-card">
    <div class="container mx-auto text-center max-w-2xl">
      <Heading level={2} class="mb-4">
        Join the <span class="text-gradient">EliteStay</span> Community
      </Heading>
      <p class="text-muted-foreground mb-8">
        Whether you're a traveler seeking extraordinary stays or a property
        owner with something special to share.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/elite">Explore Properties</Button>
        <Button variant="secondary" href="/host">List Your Property</Button>
      </div>
    </div>
  </section>
</PageLayout>
